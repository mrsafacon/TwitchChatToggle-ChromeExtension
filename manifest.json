{
  "manifest_version": 2,

  "name": "Twitch Chat Toggle",
  "description": "Hide Twitch chat until you explicitly allow showing it.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png"
  },
  "permissions": [
   "activeTab"
 ],
   "content_scripts": [{
    "css": ["content.css"],
    "js": ["content.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }],
  "background":{
    "scripts": ["background.js"]
  }
}
